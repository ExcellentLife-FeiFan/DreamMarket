<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="40.0dip"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_viewgroup_click"
            android:visibility="visible">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.0dip"
                android:scaleType="fitStart"
                android:src="@drawable/ic_actionbar_back_black" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_viewgroup_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_left"
            android:text="梦想工厂"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/text_size_actionbar_title"
            android:visibility="visible" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_title_middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_bg_viewgroup_click"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_ui_margin"
        android:paddingRight="@dimen/default_ui_margin"
        android:text="梦想工厂"
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/text_size_actionbar_title"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_v_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_viewgroup_click"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/default_ui_margin"
                android:layout_marginRight="@dimen/default_ui_margin"
                android:scaleType="fitStart" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_bg_viewgroup_click"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_ui_margin_medium_s"
            android:paddingRight="@dimen/default_ui_margin_medium_s"
            android:text="@string/null_s"
            android:textColor="@color/black_overlay2"
            android:textSize="@dimen/text_size_actionbar_right"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/commom_line"></include>
    </RelativeLayout>


</RelativeLayout>