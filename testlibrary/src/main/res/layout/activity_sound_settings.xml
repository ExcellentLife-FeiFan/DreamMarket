<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/text_size_small" android:textColor="@color/text_gray_light" android:gravity="center_vertical" android:paddingLeft="@dimen/default_ui_margin_large" android:paddingTop="@dimen/default_ui_margin" android:paddingBottom="@dimen/default_ui_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="订单提醒" />
        <LinearLayout android:id="@id/ll_polling_status" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/list_item_layout">
