        </LinearLayout>
        <TextView android:textColor="@color/text_secondary" android:paddingLeft="@dimen/default_ui_margin_large" android:paddingTop="@dimen/default_ui_margin_large" android:paddingRight="@dimen/default_ui_margin_large" android:paddingBottom="@dimen/default_ui_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="音量" />
        <LinearLayout android:id="@id/ll_switch_sound_max" style="@style/list_item_layout">
            <TextView android:text="开启APP时声音调为最大" style="@style/left_text_layout" />
            <Switch android:id="@id/switch_sound_max_setting" android:textOn="@string/open" android:textOff="@string/close" style="@style/right_text_layout_without_arron" />
        </LinearLayout>
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin" android:layout_marginRight="@dimen/default_ui_margin" android:src="@drawable/divider" android:scaleType="fitXY" />
        <LinearLayout android:id="@id/ll_setting_volume" style="@style/list_item_layout">
            <TextView android:text="新消息音量" style="@style/left_text_layout" />
            <SeekBar android:layout_gravity="center_vertical" android:id="@id/sb_volume_setting" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0" style="@android:style/Widget.Holo.SeekBar" />
        </LinearLayout>
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin" android:layout_marginRight="@dimen/default_ui_margin" android:src="@drawable/divider" android:scaleType="fitXY" android:contentDescription="@null" />
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin" android:layout_marginRight="@dimen/default_ui_margin" android:src="@drawable/divider" android:scaleType="fitXY" android:contentDescription="@null" />
        <TextView android:textColor="@color/text_secondary" android:paddingLeft="@dimen/default_ui_margin_large" android:paddingTop="@dimen/default_ui_margin_large" android:paddingRight="@dimen/default_ui_margin_large" android:paddingBottom="@dimen/default_ui_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="播放频率" />
        <LinearLayout android:id="@id/ll_loop_setting_order" style="@style/list_item_layout">
            <TextView android:text="接单" style="@style/left_text_layout" />
            <TextView android:id="@id/txt_loop_setting_order" style="@style/right_text_layout" />
        </LinearLayout>
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin" android:layout_marginRight="@dimen/default_ui_margin" android:src="@drawable/divider" android:scaleType="fitXY" />
        <LinearLayout android:id="@id/ll_loop_setting_refund" style="@style/list_item_layout">
            <TextView android:text="退单" style="@style/left_text_layout" />
            <TextView android:id="@id/txt_loop_setting_refund" style="@style/right_text_layout" />
        </LinearLayout>
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin" android:layout_marginRight="@dimen/default_ui_margin" android:src="@drawable/divider" android:scaleType="fitXY" />
        <LinearLayout android:id="@id/ll_loop_setting_reminder" style="@style/list_item_layout">
            <TextView android:text="催单" style="@style/left_text_layout" />
            <TextView android:id="@id/txt_loop_setting_reminder" style="@style/right_text_layout" />
        </LinearLayout>
        <TextView android:textColor="@color/text_secondary" android:paddingLeft="@dimen/default_ui_margin_large" android:paddingTop="@dimen/default_ui_margin_great" android:paddingRight="@dimen/default_ui_margin_large" android:paddingBottom="@dimen/default_ui_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="铃音" />
        <LinearLayout android:id="@id/ll_sound_setting_girl" android:clickable="true" style="@style/list_item_layout">
            <TextView android:id="@id/txt_sound_girl" android:clickable="false" android:text="经典女生版" style="@style/left_text_layout_and_draw" />
            <TextView android:id="@id/txt_sound_setting_girl" android:clickable="false" style="@style/right_text_layout_audiotion" />
