            <TextView android:id="@id/tv_polling_status" style="@style/right_text_layout" />
        </LinearLayout>
        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin" android:layout_marginRight="@dimen/default_ui_margin" android:src="@drawable/divider" android:scaleType="fitXY" />
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/list_item_layout">
            <TextView android:text="订单提醒异常弹窗" style="@style/left_text_layout" />
            <Switch android:id="@id/switch_show_setting_guides" android:checked="true" android:textOn="@string/open" android:textOff="@string/close" style="@style/right_text_layout_without_arron" />
        </LinearLayout>
        <TextView android:textColor="@color/text_secondary" android:paddingLeft="@dimen/default_ui_margin_large" android:paddingTop="@dimen/default_ui_margin_large" android:paddingRight="@dimen/default_ui_margin_large" android:paddingBottom="@dimen/default_ui_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="振动" />
        <LinearLayout android:id="@id/ll_setting_vibrator" style="@style/list_item_layout">
