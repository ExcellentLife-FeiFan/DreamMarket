        <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin" android:layout_marginRight="@dimen/default_ui_margin" android:src="@drawable/divider" android:scaleType="fitXY" android:contentDescription="@null" />
        <LinearLayout android:id="@id/ll_sound_setting_yue" android:clickable="true" style="@style/list_item_layout">
            <TextView android:id="@id/txt_sound_yue" android:clickable="false" android:text="岳云鹏版" style="@style/left_text_layout_and_draw" />
            <TextView android:id="@id/txt_sound_setting_yue" android:clickable="false" style="@style/right_text_layout_audiotion" />
        </LinearLayout>
    </LinearLayout>
