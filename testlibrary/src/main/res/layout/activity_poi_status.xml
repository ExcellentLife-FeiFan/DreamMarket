<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/img_poi_status_explanation" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/default_ui_margin" android:src="@drawable/ic_help" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/img_poi_status_explanation">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@id/ll_poi_status_header" android:background="@color/white" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/text_size_huge" android:textColor="@color/text_green" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/txt_poi_status_status" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:drawableLeft="@drawable/img_yyz" android:drawablePadding="@dimen/default_ui_margin_large" />
                <TextView android:textColor="@color/text_secondary" android:id="@id/txt_poi_status_open_time" android:padding="@dimen/default_ui_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_ui_margin" />
                <ImageView android:id="@id/divider_poi_status_open_time" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/divider" android:scaleType="fitXY" android:contentDescription="@null" />
                <TextView android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/txt_poi_status_description" android:padding="@dimen/default_ui_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            </LinearLayout>
            <Button android:textColor="@color/d_text_red_selector" android:id="@id/btn_poi_status_change_status" android:background="@drawable/d_bg_btn_red_selector" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin_large" android:layout_marginTop="@dimen/default_ui_margin_huge" android:layout_marginRight="@dimen/default_ui_margin_large" android:layout_marginBottom="@dimen/default_ui_margin" android:text="@string/action_poi_status_close" />
            <TextView android:textColor="@color/text_secondary" android:id="@id/txt_poi_status_action_description" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_ui_margin_large" android:layout_marginRight="@dimen/default_ui_margin_large" android:text="@string/message_poi_status_tips_close" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>