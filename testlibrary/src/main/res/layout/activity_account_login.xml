<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_acc_login"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:layout_marginRight="@dimen/default_ui_margin_top"
            android:src="@drawable/icon_user" />

        <EditText
            android:id="@id/et_login_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/prompt_username"
            android:inputType="text"
            android:maxLines="1"
            android:paddingBottom="15.0dip"
            android:paddingTop="15.0dip"
            android:singleLine="true"
            android:textColorHint="@color/text_input_hint"
            android:textSize="16.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="20.0dip"
        android:background="@color/divider_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:layout_marginRight="@dimen/default_ui_margin_top"
            android:src="@drawable/icon_password" />

        <EditText
            android:id="@id/et_login_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/prompt_password"
            android:imeActionId="@id/action_login"
            android:imeActionLabel="@string/action_sign_in"
            android:imeOptions="normal|actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="15.0dip"
            android:paddingTop="15.0dip"
            android:singleLine="true"
            android:textColorHint="@color/text_input_hint"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_login_get_captcha"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:layout_marginRight="@dimen/default_ui_margin_top"
            android:src="@drawable/ic_login_capture" />

        <EditText
            android:id="@id/et_login_capture"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="@string/img_captcha"
            android:imeActionId="@id/action_login"
            android:imeActionLabel="@string/action_sign_in"
            android:imeOptions="normal|actionUnspecified"
            android:maxLines="1"
            android:paddingBottom="15.0dip"
            android:paddingTop="15.0dip"
            android:singleLine="true"
            android:textColorHint="@color/text_input_hint"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@id/img_capture"
            android:layout_width="66.0dip"
            android:layout_height="30.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:src="@drawable/bg_rect_gray" />

        <ImageView
            android:id="@id/img_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:layout_marginRight="@dimen/default_ui_margin_top"
            android:src="@drawable/ic_refresh_capture" />
    </LinearLayout>
</LinearLayout>