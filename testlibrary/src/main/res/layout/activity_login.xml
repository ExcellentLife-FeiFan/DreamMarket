<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/sv_login"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_background">

    <com.sankuai.meituan.meituanwaimaibusiness.util.widget.customview.EditTextKeyboardLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@id/ll_acc_login_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/d_bg_green_selector"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15.0dip"
                    android:paddingTop="15.0dip"
                    android:text="@string/prompt_account_login"
                    android:textColor="@drawable/d_bg_tv_login_green_selector"
                    android:textSize="16.0sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@drawable/bg_bottom_green_selector" />
            </LinearLayout>

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:background="#ffeaeaea" />

            <LinearLayout
                android:id="@id/ll_mobile_login_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/d_bg_green_selector"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15.0dip"
                    android:paddingTop="15.0dip"
                    android:text="@string/prompt_mobile_login"
                    android:textColor="@drawable/d_bg_tv_login_green_selector"
                    android:textSize="16.0sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@drawable/bg_bottom_green_selector" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/activity_account_login" />

            <include layout="@layout/activity_mobile_login" />
        </FrameLayout>

        <Button
            android:id="@id/btn_login_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="40.0dip"
            android:background="@drawable/bg_green"
            android:text="@string/action_sign_in"
            android:textColor="@color/text_white" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_register_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/register_acc"
                android:textColor="@color/green"
                android:textSize="16.0sp" />

            <TextView
                android:id="@id/tv_find_back_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/find_back_password"
                android:textColor="@color/green"
                android:textSize="16.0sp" />
        </FrameLayout>
    </com.sankuai.meituan.meituanwaimaibusiness.util.widget.customview.EditTextKeyboardLayout>
</ScrollView>