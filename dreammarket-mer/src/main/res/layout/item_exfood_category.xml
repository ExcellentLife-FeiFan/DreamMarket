<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_itemview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15.0dip">

    <RelativeLayout
        android:id="@+id/rl_food_category_name"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10.0dip"
        android:layout_weight="2.0">

        <TextView
            android:id="@+id/tv_food_category_edit_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawablePadding="5.0dip"
            android:drawableRight="@drawable/ic_right"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="营养赞餐"
            android:textSize="16.0dip" />

        <TextView
            android:id="@+id/tv_product_spu_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12个商品"
            android:layout_below="@+id/tv_food_category_edit_name"
            android:textColor="@color/text_secondary"
            android:textSize="12.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="3.0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_food_category_edit"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_weight="2.0"
            android:background="@drawable/d_bg_btn_green_selector"
            android:gravity="center"
            android:paddingBottom="8.0dip"
            android:paddingTop="8.0dip"
            android:text="编辑"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/foodinfo_default_txt_size" />

        <TextView
            android:id="@+id/btn_food_category_edit_new"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="3.0"
            android:background="@drawable/d_bg_btn_green_selector"
            android:gravity="center"
            android:paddingBottom="8.0dip"
            android:paddingTop="8.0dip"
            android:text="新建商品"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/foodinfo_default_txt_size" />
    </LinearLayout>
</LinearLayout>