<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_category_item_gray_selector"
    android:paddingBottom="8.0dip"
    android:paddingTop="8.0dip">

    <com.github.zagum.expandicon.ExpandIconView
        android:id="@+id/expandv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dip"
        app:eiv_animationDuration="300"
        app:eiv_color="@color/gray"
        app:eiv_colorIntermediate="@color/gray"
        app:eiv_colorLess="@color/gray"
        app:eiv_colorMore="@color/gray"
        app:eiv_padding="0dp"
        app:eiv_roundedCorners="true"
        app:eiv_switchColor="true" />

    <ImageView
        android:id="@+id/iv_indicator"
        android:layout_width="2.0dip"
        android:layout_height="12.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:layout_toLeftOf="@id/expandv"
        android:layout_toRightOf="@id/iv_indicator"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="营养早餐"
        android:textColor="@color/black_overlay"
        android:textSize="14.0sp" />
</RelativeLayout>