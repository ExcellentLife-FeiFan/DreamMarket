<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mobile"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:layout_marginRight="@dimen/default_ui_margin_top"
            android:src="@drawable/icon_mobile" />

        <EditText
            style="@style/Common_Et"
            android:layout_width="0.0dip"
            android:layout_weight="1.0"
            android:hint="@string/prompt_phone"
            android:inputType="phone"
            android:maxLength="11" />

        <TextView
            android:id="@+id/tv_getsms"
            style="@style/Common_Text_Border_btn"
            android:layout_marginRight="15.0dip"
            android:text="获取验证码" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="20.0dip"
        android:background="@color/divider_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:layout_marginRight="@dimen/default_ui_margin_top"
            android:src="@drawable/icon_captcha" />

        <EditText
            style="@style/Common_Et"
            android:hint="@string/prompt_captcha" />
    </LinearLayout>
</LinearLayout>