<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category_tips"
        style="@style/food_category_tips"
        android:text="分类名称" />

    <EditText
        android:id="@+id/et_name"
        style="@style/food_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_tips"
        android:hint="请输入分类名称"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:paddingLeft="@dimen/food_margin"
        android:singleLine="true" />

    <TextView
        android:id="@+id/food_category_des"
        style="@style/food_category_tips"
        android:layout_below="@+id/et_name"
        android:text="分类描述" />

    <EditText
        android:id="@+id/ed_description"
        style="@style/food_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="150.0dip"
        android:layout_below="@+id/food_category_des"
        android:gravity="top"
        android:hint="请输入分类描述,最多40字"
        android:maxLength="40"
        android:paddingLeft="@dimen/food_margin" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingBottom="12.0dip"
        android:paddingLeft="35.0dip"
        android:paddingRight="35.0dip"
        android:paddingTop="12.0dip">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/d_bg_btn_gary_selector"
            android:paddingBottom="10.0dip"
            android:paddingLeft="40.0dip"
            android:paddingRight="40.0dip"
            android:paddingTop="10.0dip"
            android:text="取消"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_little_small" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_green_btn"
            android:paddingBottom="10.0dip"
            android:paddingLeft="40.0dip"
            android:paddingRight="40.0dip"
            android:paddingTop="10.0dip"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_little_small" />
    </RelativeLayout>
</RelativeLayout>