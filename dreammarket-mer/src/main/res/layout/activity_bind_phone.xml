<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_ui_margin_large"
        android:background="#fffef4d8"
        android:padding="@dimen/default_ui_margin_large"
        android:text="@string/message_bind_notice"
        android:textColor="#fffe4d3d"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_ui_margin_large"
        android:paddingRight="@dimen/default_ui_margin_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:minEms="4"
            android:paddingBottom="15.0dip"
            android:paddingTop="15.0dip"
            android:text="手机号"
            android:textSize="@dimen/text_size_little_small" />

        <EditText
            android:id="@+id/et_bind_phone_phone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:maxLines="1"
            android:textColorHint="@color/text_input_hint"
            android:textSize="@dimen/text_size_little_small" />

        <TextView
            android:id="@+id/txt_bind_phone_get_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/d_bg_btn_green_selector"
            android:paddingBottom="2.0dip"
            android:paddingLeft="@dimen/default_ui_margin"
            android:paddingRight="@dimen/default_ui_margin"
            android:paddingTop="2.0dip"
            android:text="获取验证码"
            android:textColor="@color/green"
            android:textSize="14.0sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/divider_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/default_ui_margin_large"
        android:paddingRight="@dimen/default_ui_margin_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:gravity="left"
            android:paddingBottom="15.0dip"
            android:paddingTop="15.0dip"
            android:text="验证码"
            android:textSize="@dimen/text_size_little_small" />

        <EditText
            android:id="@+id/et_bind_phone_verify_code"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:textColorHint="@color/text_input_hint"
            android:textSize="@dimen/text_size_little_small" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_bind_phone_bind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_ui_margin_large"
        android:layout_marginRight="@dimen/default_ui_margin_large"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/bg_green"
        android:paddingBottom="@dimen/default_ui_margin"
        android:paddingTop="@dimen/default_ui_margin"
        android:text="立即验证"
        android:textColor="@color/text_white" />
</LinearLayout>