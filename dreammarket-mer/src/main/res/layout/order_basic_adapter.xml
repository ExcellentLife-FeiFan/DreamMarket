<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order_basic"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/order_title_bg"
        android:paddingBottom="@dimen/default_ui_margin_small"
        android:paddingLeft="@dimen/order_card_margin">

        <TextView
            android:id="@+id/tv_order_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_order_num"
            android:layout_alignParentLeft="true"
            android:text="\#"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/txt_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_order_mark"
            android:gravity="center"
            android:text="xxx"
            android:textColor="@color/text_black"
            android:textSize="@dimen/medium_font_size_header"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_hope"
            style="@style/order_basic_small_text"
            android:layout_alignBaseline="@+id/txt_order_num"
            android:layout_toRightOf="@+id/txt_order_num"
            android:paddingLeft="@dimen/default_ui_margin"
            android:text="期望" />

        <TextView
            android:id="@+id/txt_order_logisitcs_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_order_num"
            android:layout_toRightOf="@+id/txt_hope"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/default_ui_margin_medium_small"
            android:text="xxx"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/order_txt_size_large" />

        <TextView
            android:id="@+id/txt_complete"
            style="@style/order_basic_small_text"
            android:layout_alignBaseline="@+id/txt_order_num"
            android:layout_toRightOf="@+id/txt_order_logisitcs_complete"
            android:paddingLeft="@dimen/default_ui_margin_medium_small"
            android:text="送达" />

        <TextView
            android:id="@+id/txt_order_logisitcs_status"
            style="@style/order_basic_small_text"
            android:layout_alignBaseline="@+id/txt_order_num"
            android:layout_alignParentRight="true"
            android:text="xxx"
            android:layout_marginRight="@dimen/order_card_margin" />

        <ImageView
            android:id="@+id/img_order_pre_maker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_order_pre_maker" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_cancel_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/default_ui_margin_great"
        android:layout_marginRight="-1.0dip"
        android:layout_marginTop="@dimen/default_ui_margin_top"
        android:background="@drawable/bg_cancel_reason"
        android:paddingBottom="@dimen/default_ui_margin_micro"
        android:paddingLeft="@dimen/default_ui_margin_top"
        android:paddingRight="@dimen/order_card_margin"
        android:paddingTop="@dimen/default_ui_margin_micro"
        android:text="xxx"
        android:visibility="gone"
        android:textColor="#ffff5a5a" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_txt_size_large"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/order_card_margin"
        android:paddingRight="@dimen/order_card_margin">

        <TextView
            android:id="@+id/txt_order_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxEms="4"
            android:text="xxx"
            android:singleLine="true"
            android:textColor="@color/order_txt_black"
            android:textSize="@dimen/order_txt_size_price_large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_order_shop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/delivery_location_selector" />

        <view
            android:id="@+id/fl_order_customer_attrs"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/txt_order_customer_name"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2.0dip"
            android:layout_toLeftOf="@+id/img_order_shop_location"
            android:layout_toRightOf="@+id/txt_order_customer_name" />

        <TextView
            android:id="@+id/text_order_customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_ui_margin_small"
            android:text="xxx"
            android:layout_toRightOf="@+id/fl_order_customer_attrs"
            android:textColor="@color/text_green"
            android:textSize="@dimen/order_txt_size_large"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_order_customer_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/order_card_margin"
        android:text="1331234123"
        android:textColor="@color/text_green"
        android:textSize="@dimen/order_txt_size_large" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/order_default_padding"
        android:paddingLeft="@dimen/order_card_margin"
        android:paddingRight="@dimen/order_card_margin"
        android:paddingTop="@dimen/order_default_padding">

        <TextView
            android:id="@+id/txt_order_customer_address"
            android:text="北京市朝阳区某池水沟里"
            style="@style/order_text_grey_text" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/order_divider_size"
        android:background="@color/order_divider" />
</LinearLayout>