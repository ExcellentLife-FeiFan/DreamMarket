<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_viewgroup_click"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/default_ui_margin_medium_small"
        android:layout_marginRight="@dimen/default_ui_margin_medium_small"
        android:background="@drawable/shape_dotted_gray_line"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="8.0dip">

        <ImageView
            android:layout_width="5.0dip"
            android:layout_height="5.0dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/shape_appcolor_circle" />

        <TextView
            android:id="@+id/txt_food_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.0dip"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="2"
            android:text="蔬菜水果"
            android:textColor="#ff505050"
            android:textSize="14.0sp" />
    </LinearLayout>
</LinearLayout>