<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/default_ui_margin"
            android:paddingLeft="@dimen/default_ui_margin_large"
            android:paddingTop="@dimen/default_ui_margin_large"
            android:text="试听铃声"
            android:textColor="@color/text_secondary" />

        <LinearLayout
            android:id="@+id/ll_bell_acceptorder"
            style="@style/list_item_layout"
            android:clickable="true">

            <TextView
                style="@style/left_text_layout"
                android:text="接单" />

            <RadioButton
                android:id="@+id/txt_listen_order"
                style="@style/right_text_layout"
                android:button="@null"
                android:clickable="false"
                android:drawableRight="@drawable/listen_nomal" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_ui_margin"
            android:layout_marginRight="@dimen/default_ui_margin"
            android:scaleType="fitXY"
            android:src="@drawable/divider" />

        <LinearLayout
            android:id="@+id/ll_bell_refundorder"
            style="@style/list_item_layout"
            android:clickable="true">

            <TextView
                style="@style/left_text_layout"
                android:text="退单" />

            <RadioButton
                android:id="@+id/txt_listen_refunder"
                style="@style/right_text_layout"
                android:button="@null"
                android:clickable="false"
                android:drawableRight="@drawable/listen_nomal" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_ui_margin"
            android:layout_marginRight="@dimen/default_ui_margin"
            android:scaleType="fitXY"
            android:src="@drawable/divider" />

        <LinearLayout
            android:id="@+id/ll_bell_reminderorder"
            style="@style/list_item_layout"
            android:clickable="true">

            <TextView
                style="@style/left_text_layout"
                android:text="催单" />

            <RadioButton
                android:id="@+id/txt_listen_reminder"
                style="@style/right_text_layout"
                android:button="@null"
                android:clickable="false"
                android:drawableRight="@drawable/listen_nomal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_setting_sound"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginBottom="@dimen/default_ui_margin_top"
            android:layout_marginLeft="@dimen/default_ui_margin_large"
            android:layout_marginRight="@dimen/default_ui_margin_large"
            android:background="@drawable/bg_green_btn"
            android:gravity="center"
            android:text="应用铃声"
            android:textColor="@color/white"
            android:textSize="18.0sp" />
    </LinearLayout>
</RelativeLayout>