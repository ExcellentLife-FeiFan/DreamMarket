<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dm.excellent.baselibrary.views.ActionBarView
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height"
            app:is_dark="true" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_background"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_account_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15.0dip"
                        android:paddingTop="15.0dip"
                        android:text="@string/prompt_account_login"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_little_small" />

                    <View
                        android:id="@+id/v_line_account"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/colorPrimary" />
                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="#ffeaeaea" />

                <LinearLayout
                    android:id="@+id/ll_mobile_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@color/light_white"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15.0dip"
                        android:paddingTop="15.0dip"
                        android:text="@string/prompt_mobile_login"
                        android:textColor="@color/text_middle_gray"
                        android:textSize="@dimen/text_size_little_small" />

                    <View
                        android:id="@+id/v_line_mobile"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@color/divider_line" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_login_type"
                android:layout_width="match_parent"
                android:layout_height="120.0dip">

                <include layout="@layout/layout_account_login" />

                <include layout="@layout/layout_mobile_login" />
            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_login"
                    style="@style/Common_Btn"
                    android:text="@string/action_sign_in" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_register"
                        style="@style/Common_Text_btn"
                        android:layout_gravity="left"
                        android:text="@string/login_prompt_register" />

                    <TextView
                        android:id="@+id/tv_findpwd"
                        style="@style/Common_Text_btn"
                        android:layout_gravity="right"
                        android:text="@string/find_back_password" />
                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp20"
                        android:background="@color/hint_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginTop="15.0dip"
                        android:text="@string/passport_oauth_login"
                        android:textColor="@color/hint_gray"
                        android:textSize="@dimen/text_size_small" />

                    <LinearLayout
                        android:id="@+id/oauth_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="17.0dip"
                        android:paddingTop="3.0dip">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_ui_margin_large"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_weixin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/passport_oauth_item_selector"
                                android:padding="8.0dip"
                                android:src="@drawable/ic_oauth_weixin" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5.0dip"
                                android:text="微信"
                                android:textColor="@color/black_overlay2"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_ui_margin_large"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_qq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/passport_oauth_item_selector"
                                android:padding="8.0dip"
                                android:src="@drawable/ic_oauth_tencent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5.0dip"
                                android:text="QQ"
                                android:textColor="@color/black_overlay2"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_weibo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/passport_oauth_item_selector"
                                android:padding="8.0dip"
                                android:src="@drawable/ic_oauth_sina" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5.0dip"
                                android:text="微博"
                                android:textColor="@color/black_overlay2"
                                android:textSize="@dimen/text_size_small" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
