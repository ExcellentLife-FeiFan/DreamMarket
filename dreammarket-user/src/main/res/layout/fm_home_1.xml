<?xml version="1.0" encoding="utf-8"?>
<com.cleveroad.pulltorefresh.firework.FireworkyPullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pullToRefresh"
    app:ptr_background="@color/wheat"
    app:ptr_rocketAnimDuration="1000"
    android:layout_width="match_parent"
    app:ptr_fireworkStyle="classic"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_left">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_ui_margin"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/default_ui_margin_small"
                    android:paddingTop="@dimen/default_ui_margin_medium"
                    app:layout_scrollFlags="scroll|enterAlways|snap">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_home_location"
                        android:drawablePadding="@dimen/default_ui_margin"
                        android:drawableRight="@drawable/vm"
                        android:text="北京市朝阳区百子湾"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp16" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rl_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:layout_marginBottom="@dimen/drawable_padding"
                    android:layout_marginTop="@dimen/drawable_padding"
                    android:background="@drawable/bg_white_halfcircle"
                    android:transitionName="search_box">


                    <TextView
                        android:id="@+id/et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_home_search"
                        android:drawablePadding="@dimen/default_ui_margin_medium_small"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:text="商家、商品名称"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp14"
                        android:transitionName="search_box" />

                </RelativeLayout>


            </android.support.design.widget.AppBarLayout>

            <include layout="@layout/content_home_1" />

        </android.support.design.widget.CoordinatorLayout>
    </ScrollView>
</com.cleveroad.pulltorefresh.firework.FireworkyPullToRefreshLayout>



