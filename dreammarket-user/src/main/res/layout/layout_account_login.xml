<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_account"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:layout_marginRight="@dimen/default_ui_margin_top"
            android:src="@drawable/icon_user" />

        <EditText
            android:id="@+id/et_phone_a"
            style="@style/Common_Et_l"
            android:hint="@string/login_prompt_phone"
            android:inputType="text" />

        <ImageView
            android:id="@+id/clear_username_a"
            android:layout_width="13.0dip"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp15"
            android:src="@drawable/passport_ic_clear_enabled" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="20.0dip"
        android:background="@color/divider_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_ui_margin_top"
            android:layout_marginRight="@dimen/default_ui_margin_top"
            android:src="@drawable/icon_password" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/Common_Et_l"
            android:layout_marginRight="@dimen/dp20"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in"
            android:imeOptions="normal|actionUnspecified"
            android:inputType="textPassword" />


        <ImageView
            android:id="@+id/clear_password"
            android:layout_width="13.0dip"
            android:visibility="invisible"
            android:layout_height="fill_parent"
            android:layout_marginRight="20.0dip"
            android:src="@drawable/passport_ic_clear_enabled" />

        <ToggleButton
            android:id="@+id/password_eye"
            android:layout_width="20.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/padding_left2"
            android:background="@null"
            android:button="@drawable/passport_password_eye_selector"
            android:checked="false"
            android:scaleType="center"
            android:textOff="@null"
            android:textOn="@null" />
    </LinearLayout>
</LinearLayout>